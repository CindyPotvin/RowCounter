<merge xmlns:android="http://schemas.android.com/apk/res/android">
	<Button
        android:id="@+id/counter_view_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/counter_view_value"
        android:text="-" /> 
        
   <TextView
        android:id="@+id/counter_view_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp" />
   <Button
        android:id="@+id/counter_view_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+" />
</merge>