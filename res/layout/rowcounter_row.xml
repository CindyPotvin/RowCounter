<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dip" >

    <TextView
        android:id="@+id/row_counter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/row_counter_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_centerInParent="true" />
    
    <Button
        android:id="@+id/row_counter_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/row_counter_value"
        android:layout_toLeftOf="@+id/row_counter_value"
        android:text="-" />

    <Button
        android:id="@+id/row_counter_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/row_counter_value"
        android:layout_toRightOf="@+id/row_counter_value"
        android:text="+" />
    
    <Button
        android:id="@+id/row_counter_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="X" />

</RelativeLayout>